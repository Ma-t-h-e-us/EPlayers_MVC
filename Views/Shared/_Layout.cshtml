    <footer>
        <div class=" container conteudo_footer">
            <div class="links_e_páginas">
                <div class="links_uteis">
                    <h2>Links úteis</h2>
                    <ul>
                        <li>Regras de utilização</li>
                        <li>Suporte</li>
                        <li>Central de ajuda</li>
                        <li>Contato</li>
                    </ul>
                </div>
                <div class="paginas">
                    <h2>Páginas</h2>
                    <ul>
                        <li>Inicio</li>
                        <li>Campeonatos</li>
                        <li>Resultados</li>
                        <li>Notícias</li>
                        <li>Login/Cadastro</li>
                    </ul>
                </div>
            </div>
            <img class="logo_do_footer" src="/midia/logo (5).svg" alt="">
            <div class="cadastro_e_redes_sociais">
                <span class="chamada_do_publico">Faça parte do nosso clan, assine nossa newsletter!</span>
                <div class="email_e_cadastro">
                    <input type="text" id="txtBusca" placeholder="E-Mail" />
                    <a href="#">
                        <button>Cadastrar</button>
                    </a>
                </div>
                <div class="redes_sociais">
                    <span>Siga-nos em:</span>
                    <a href="#">
                        <img src="/midia/instagram 1.png" alt="logo instagram">
                    </a>
                    <a href="#">
                        <img src="/midia/facebook 1.png" alt="facebook logo">
                    </a>
                    <a href="#">
                        <img src="/midia/youtube 1.png" alt="logo youtube">
                    </a>
                </div>
            </div>
        </div>
    </footer>
