    <header>
        <div class="container container_header">
            <img src="/midia/logo (5).svg" alt="logo_eplayers">
            <nav class="sessões_nav_header">
                <a asp-area="" asp-controller="Home" asp-action="Index">início</a>
                <a href="#participar" target="_parent">horários</a>
                <a href="">resultados</a>
                <a href="#jogos" target="_parent">campeonato</a>
                <a href="#noticiass" target="_parent">notícias</a>
                @if (ViewBag.UserName != null)
                {
                    <li style="color: #FFFFFF">Olá @ViewBag.UserName</li>
                    <a asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
                } else {
